#!/bin/bash
#PBS -l nodes=1:ppn=1,vmem=8g,walltime=2:00:00
#PBS -N app-registration-dwi2anat
#PBS -V


#set -e

t1=$(jq -r .t1 config.json)

# Custom singularity runner
singularity_run() {
    singularity exec -e docker://"$1" "${@:2}"
}

mkdir t1_brain
mkdir mask

singularity_run freesurfer/synthstrip:1.7-gpu mri_synthstrip  -i ${t1} -o ./t1_brain/t1.nii.gz -m ./mask/mask.nii.gz

